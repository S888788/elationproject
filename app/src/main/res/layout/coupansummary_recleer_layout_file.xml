<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="5dp"

            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="2"
               android:gravity="right">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Click Here"
                   android:textStyle="bold"
                   android:textColor="@color/colorPrimary"
                   android:layout_gravity="right"
                   android:gravity="right"
                   android:textAlignment="textEnd"
                   android:textSize="15sp"
                   android:layout_weight="1"
                   android:layout_marginTop="10dp"
                   />
               <ImageView
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:src="@drawable/ic_baseline_ads_click_24"
                   android:layout_gravity="right"
                   android:layout_weight="1"
                   />

           </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Studio Name"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_weight="1"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/coupan_summary_stu_name"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#868282"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scheme Name"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="17dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/coupan_summary_Coup_SchemeName"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#868282"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:weightSum="2">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Issue Coupan"
                       android:textColor="@color/colorPrimary"
                       android:textStyle="bold"
                       android:textSize="17dp"
                       />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/coupan_summary_IssueCoupan"
                       android:textSize="17dp"
                       android:textStyle="bold"
                       android:textColor="#1A531C"

                       />
               </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Used Coupan"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/coupan_summary_UsedCoupon"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="#E41F10"
                        />
                </LinearLayout>


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile Number"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="17dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/coupan_summary_std_mobile"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#868282"
                />


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>