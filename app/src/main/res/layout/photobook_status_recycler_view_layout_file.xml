<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/party_member_cardview_background"
           >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
               android:weightSum="1"
            android:gravity="left">





            <TextView
                android:id="@+id/photo_book_status_st_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="2dp"
                android:text="Studio Name"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:textStyle="bold"
                android:background="@color/colorPrimary"
                android:textAlignment="viewStart"
                android:visibility="visible" />

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                 android:weightSum="2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Booking Date : "
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:visibility="visible"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=": Booking Date"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:textColor="#000000"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:id="@+id/photo_status_booking_dat"
                    android:visibility="visible"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                  android:weightSum="2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Booking Number "
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:visibility="visible"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Booking Number"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:textColor="#000000"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:id="@+id/photo_BOOKING_NUMBER"
                    android:visibility="visible"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                   android:weightSum="2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SERVER ID"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/photo_status_SERVER_ID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SERVER ID"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:visibility="visible"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:weightSum="2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bill Amount"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:visibility="visible"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bill Amount"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:textColor="#B13A31"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:id="@+id/photo_status_BillDetail"

                    android:visibility="visible"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                  android:weightSum="2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dispatch Detail"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:visibility="visible"/>


                <TextView
                    android:id="@+id/photo_status_DispatchDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="2dp"

                    android:text="Dispatch Detail"
                    android:textColor="#B13A31"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                  android:weightSum="2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:visibility="visible"/>


                <TextView
                    android:id="@+id/photo_status_Stusts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="2dp"

                    android:text="Dispatch Detail"
                    android:textColor="#58A15D"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>