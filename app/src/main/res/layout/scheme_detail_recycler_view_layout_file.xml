<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/party_member_cardview_background"
            android:id="@+id/bal_recy_lay_liner">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    android:weightSum="1"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SchemeId"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:padding="2dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:gravity="center_horizontal"

                            android:layout_gravity="center"
                            android:visibility="visible"/>

                        <TextView
                            android:id="@+id/cuopan_detail_scheme_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_horizontal"
                            android:padding="2dp"

                            android:text="SchemeId"
                            android:textColor="#000000"
                            android:textSize="13sp"
                            android:visibility="visible"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:weightSum="1"
                    android:gravity="center">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SchemeCode"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center_horizontal"
                        android:padding="2dp"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/cuopan_detail_scheme_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SchemeCode"
                        android:textColor="#000"
                        android:textSize="13sp"


                        android:gravity="center_horizontal"
                        android:padding="2dp"
                        android:layout_weight="1"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:weightSum="1">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deposite Amount"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorPrimaryDark"
                        android:padding="2dp"
                        android:textSize="15sp"

                        android:layout_weight="1"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/cuopan_detail_depositeAmt"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DepositeAmt"
                        android:textSize="13sp"
                        android:gravity="center_horizontal"
                        android:textColor="#000000"
                        android:padding="2dp"
                        android:layout_weight="1"
                        android:visibility="visible"/>


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    android:weightSum="1"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="2">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_horizontal"
                            android:padding="2dp"
                            android:text="SchemeDetail"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/cuopan_detail_schemeDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_horizontal"
                            android:padding="2dp"
                            android:text="SchemeDetail"
                            android:textColor="#000000"
                            android:textSize="13sp"
                            android:visibility="visible"/>
                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/cuopan_detail_SchemeName"
                        android:layout_height="wrap_content"
                        android:text="SchemeName"
                        android:gravity="center_horizontal"
                        android:textColor="#A82A02"
                        android:padding="2dp"
                        android:layout_weight="1"
                        android:visibility="invisible"/>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:weightSum="0.5"
                    android:gravity="center">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SchemeExpiry"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center_horizontal"
                        android:padding="2dp"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/cuopan_detail_SchemeExpiry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SchemeExpiry"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textColor="#000000"
                        android:textSize="13sp"
                        android:gravity="center_horizontal"
                        android:padding="2dp"
                        android:layout_weight="1"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>